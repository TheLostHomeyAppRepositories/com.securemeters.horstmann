{
  "id": "srt321",
  "name": {
    "en": "SRT321"
  },
  "class": "thermostat",
  "capabilities": [
    "measure_battery",
    "alarm_battery",
    "target_temperature",
    "measure_temperature",
    "thermostat_mode"
  ],
  "energy": {
    "batteries": ["AAA", "AAA"]
  },
  "images": {
    "large": "/drivers/srt321/assets/images/large.jpg",
    "small": "/drivers/srt321/assets/images/small.jpg"
  },
  "pair": [
    {
      "id": "list_devices",
      "template": "list_devices",
      "navigation": {
        "next": "add_devices"
      }
    },
    {
      "id": "add_devices",
      "template": "add_devices"
    }
  ],
  "zwave": {
    "manufacturerId": 89,
    "productTypeId": [4],
    "productId": [5],
    "zwaveAllianceProductId": 1740,
    "associationGroups": [1, 2, 3, 4, 5, 6],
    "wakeUpInterval": 1800,
    "learnmode": {
      "image": "/drivers/srt321/assets/images/learnmode.png",
      "instruction": {
        "en": "Put thermostat in installer mode (dip switch 1 On).\n Turn the dial to ‘L’ and press the dial.\n"
      }
    }
  },
  "settings": [
    {
      "id": "enable_temperature_sensor",
      "type": "checkbox",
      "value": true,
      "zwave": {
        "index": 1,
        "size": 2
      },
      "label": {
        "en": "Enable Temperature Sensor"
      }
    },
    {
      "id": "temperature_unit",
      "type": "dropdown",
      "value": "celsius",
      "zwave": {
        "index": 2,
        "size": 2
      },
      "label": {
        "en": "Temperature Unit"
      },
      "values": [
        {
          "id": "celsius",
          "label": {
            "en": "Celsius"
          }
        },
        {
          "id": "farhenheit",
          "label": {
            "en": "Fahrenheit"
          }
        }
      ]
    },
    {
      "id": "temperature_delta",
      "type": "number",
      "value": 10,
      "zwave": {
        "index": 3,
        "size": 1
      },
      "label": {
        "en": "Delta Temperature in 0.1° steps"
      },
      "attr": {
        "min": 0,
        "max": 100
      },
      "hint": {
        "en": "Value is multiplied by 0.1 °С/°F.   So 10 means 1°С/°F"
      }
    }
  ]
}
